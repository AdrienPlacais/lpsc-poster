% Based on Gemini theme
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================
% Original colors
\definecolor{lightgray}{RGB}{245, 246, 250}
\definecolor{lightblue}{RGB}{232, 244, 255}

% LPSC colors
\definecolor{LPSCdarkblue}{HTML}{003460}
\definecolor{otherblue}{HTML}{005093}

\definecolor{LPSCorange}{HTML}{bf8900}
% \definecolor{LPSClightorange}{HTML}{f2ae00}

\definecolor{LPSCbg}{HTML}{ffffff}

% ====================
% Theme
% ====================
% Basic colors
\setbeamercolor{palette primary}{fg=LPSCdarkblue, bg=LPSCbg}
\setbeamercolor{palette secondary}{fg=LPSCdarkblue, bg=LPSCbg}
\setbeamercolor{palette tertiary}{bg=LPSCdarkblue, fg=LPSCbg}
\setbeamercolor{palette quaternary}{fg=LPSCdarkblue, bg=LPSCbg}
\setbeamercolor{structure}{fg=LPSCdarkblue}
\setbeamercolor{alerted text}{fg=LPSCorange}

% Headline
\setbeamercolor{headline}{fg=LPSCdarkblue, bg=LPSCbg}
\setbeamercolor{headline rule}{bg=LPSCdarkblue}

% Block
\setbeamercolor{block title}{fg=LPSCdarkblue, bg=LPSCbg}
\setbeamercolor{block separator}{bg=LPSCorange}
\setbeamercolor{block body}{fg=LPSCdarkblue, bg=LPSCbg}

% Alert Block
\setbeamercolor{block alerted title}{fg=LPSCdarkblue, bg=lightblue}
\setbeamercolor{block alerted separator}{bg=LPSCdarkblue}
\setbeamercolor{block alerted body}{fg=LPSCdarkblue, bg=lightblue}

% Example Block
\setbeamercolor{block example title}{fg=LPSCdarkblue, bg=lightgray}
\setbeamercolor{block example separator}{bg=LPSCdarkblue}
\setbeamercolor{block example body}{fg=LPSCdarkblue, bg=lightgray}

% Heading
\setbeamercolor{heading}{fg=LPSCdarkblue}

% Itemize
\setbeamercolor{item}{fg=LPSCdarkblue}

% Bibliography
\setbeamercolor{bibliography item}{fg=LPSCdarkblue}
\setbeamercolor{bibliography entry author}{fg=LPSCdarkblue}
\setbeamercolor{bibliography entry title}{fg=LPSCdarkblue}
\setbeamercolor{bibliography entry location}{fg=LPSCdarkblue}
\setbeamercolor{bibliography entry note}{fg=LPSCdarkblue}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
